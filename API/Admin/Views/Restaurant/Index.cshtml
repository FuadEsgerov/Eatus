@model IEnumerable<BrandViewModel>
@inject Repository.Services.ICloudinaryService _cloudinaryService
@{
    ViewData["Title"] = "Məhsullar";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Restoranlar</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a asp-action="create" class="m-0 font-weight-bold btn btn-success">Yeni Restoran</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Vəziyyəti</th>
                            <th>Adı</th>
                            <th>Detalı</th>
                            <th>Ünvanı</th>
                            <th>Şöbəsi</th>
                            <th>Şəkil</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Vəziyyəti</th>
                            <th>Adı</th>
                            <th>Detalı</th>
                            <th>Ünvanı</th>
                            <th>Şöbəsi</th>
                            <th>Şəkil</th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @if (item.Status)
                                {
                                    <span class="badge badge-success">Aktiv</span>
                                }
                                else
                                {
                                    <span class="badge badge-warning">Passiv</span>
                                }
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Detail</td>
                            <td>@item.Address</td>
                            <td>@item.Department.Name</td>
                            <td>
                                <img width="100" src="@_cloudinaryService.BuildUrl(item.Image)" />
                            </td>
                            <td class="d-flex justify-content-center">

                                <a class="btn btn-info btn-circle btn-sm ml-2" asp-action="edit" asp-route-id="@item.Id">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>

                                <a class="btn btn-danger btn-circle btn-sm ml-2 deleteitem" asp-action="delete" asp-route-id="@item.Id">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->